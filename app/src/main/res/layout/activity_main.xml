<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.deyvi.calculator.View.MainActivity">

    <TextView
        android:id="@+id/resultado"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/suma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

       <EditText
           android:inputType="number"
           android:paddingBottom="20dp"
           android:id="@+id/numberOne"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingRight="60dp"
           android:paddingLeft="10dp"
           android:layout_alignBottom="@+id/numberTwo"
           android:layout_alignStart="@+id/resultado"
           android:layout_marginStart="72dp" />
       <EditText
           android:inputType="number"
           android:id="@+id/numberTwo"
           android:layout_width="60dp"
           android:layout_height="wrap_content"
           android:paddingLeft="20dp"
           android:layout_marginTop="41dp"
           android:layout_below="@+id/resultado"
           android:layout_toStartOf="@+id/resultado" />

    <Button
        android:id="@+id/sumar"
        android:onClick="sumar"
        android:text="@string/sumar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberOne"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />



</RelativeLayout>
